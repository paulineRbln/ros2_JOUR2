<?xml version="1.0"?>
<robot name="origins">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
    </visual>
  </link>

  <link name="segm_1">
    <visual>
      <geometry>
        <cylinder length="1.0" radius="0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.7"/>
    </visual>
  </link>

  <joint name="base_to_segm_1" type="revolute">
    <parent link="base_link"/>
    <child link="segm_1"/>
    <origin xyz="0 0 0.25"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

</robot>
